		<script type="text/javascript">
			function killergame(){
				var userChoice = prompt("Hey My frined! Who want to be killed?", "Billy? ,Arthur? or Russell?");
				if (userChoice === "Billy"){
					var victim = Math.random();
					if(victim <0.5){
						document.write("Billy: Fuck You!"+ "");
						var killerAsk = prompt("He fucks you! Kill him or not??", "yes , no");
							if(killerAsk === "yes"){
								document.write("He is dead!");
							} else {
								document.write("He run away!")
							}
					}

					else{
						document.write("You cant kill him, He run away!")
						}
					}
				if (userChoice === "Arthur"){
					var victim = Math.random();
					if(victim <0.5){
						document.write("Arthur: Fuck You!"+ "");
						var killerAsk = prompt("He fucks you! Kill him or not??", "yes ,no");
							if(killerAsk === "yes"){
								document.write("He is dead!");
							} else {
								document.write("He run away!")
							}
					}


					else{
						document.write("You cant kill him, He run away!")
						}
					}

				if (userChoice === "Russell"){
					var victim = Math.random();
					if(victim <0.5){
						document.write("Russell: Fuck You!"+ "");
						var killerAsk = prompt("He fucks you! Kill him or not??", "yes , no");
							if(killerAsk === "yes"){
								document.write("He is dead!");
							} else {
								document.write("He run away!")
							}
					}

					else{
						document.write("You cant kill him, He run away!")
						}
					}
			}
			

